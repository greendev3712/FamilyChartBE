{
    "routePrefix": "system.roles",
    "crtNo": true,
    "buttons": [
        "excel",
        "create",
        {
            "type": "row",
            "icon": "sliders-h",
            "class": "is-row-button",
            "routeSuffix": "permissions.get",
            "event": "configure-role"
        },
        {
            "type": "row",
            "icon": "save",
            "class": "is-row-button",
            "routeSuffix": "permissions.write",
            "postEvent": "write-config-file",
            "action": "ajax",
            "method": "POST"
        },
        "edit",
        "destroy"
    ],
    "columns": [
        {
            "label": "Name",
            "name": "name",
            "data": "roles.name",
            "meta": [
                "searchable",
                "sortable"
            ]
        },
        {
            "label": "Display Name",
            "name": "display_name",
            "data": "roles.display_name",
            "meta": [
                "searchable",
                "sortable"
            ]
        },
        {
            "label": "Description",
            "name": "description",
            "data": "roles.description",
            "meta": [
                "searchable",
                "sortable"
            ]
        },
        {
            "label": "Default Menu",
            "name": "defaultMenu",
            "data": "menus.name",
            "meta": [
                "searchable",
                "sortable"
            ]
        },
        {
            "label": "Created At",
            "name": "created_at",
            "data": "roles.created_at",
            "meta": [
                "sortable",
                "date"
            ]
        }
    ]
}